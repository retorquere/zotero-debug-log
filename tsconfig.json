{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": [ "es2017", "dom", "dom.iterable", "webworker", "ES2021.WeakRef" ],
    "typeRoots": [ "node_modules", "./typings", "./node_modules/@types" ],
    "module": "preserve",
    "moduleResolution": "bundler",
    "types": ["zotero-types"]
  },
  "include": [ "typings/*", "*.ts" ]
}
